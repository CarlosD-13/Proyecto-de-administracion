@model Proyecto_Admin_Remix.Models.Propiedades
      
@{
    ViewData["Title"] = "Details";
    var foto = ViewBag.Fotos;
}


<div class="container">

    <!--Logo de la parte de arriba-->
    <div class="container">

        <img src="~/images/Logo Inmobiliria.jpg" width="400" height="125" style="margin-top:-20px" />
        <h1 style="font-family: 'Modern No. 20'; font-size: 55px;
                text-align:right; margin-top:-68px; margin-right: +60px">
            Inmobiliaria Soriano Perez
        </h1>

    </div>

    <!--Barra de navegacion-->
    <div class="navbar navbar-inverse navbar" style="background-color:#175592">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="margin-left:+500px">
                    <li style="margin-left:-350px; font-family: 'Modern No. 20'; font-size: 20px">@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li style="margin-left:-200px; font-family: 'Modern No. 20'; font-size: 20px">@Html.ActionLink("Acerca de", "About", "Home")</li>
                    <li style="margin-left:-50px; font-family: 'Modern No. 20'; font-size: 20px">@Html.ActionLink("Contacto", "Contact", "Home")</li>
                </ul>

            </div>
        </div>
    </div>

    <!--Banner con titulo-->
    <div class="container" style="margin-left:-15px">

        <img src="~/images/ImagenPrincipal-1.jpg" style="
           width: 1140px;
           height: 115px;
           margin: 0 -1px;
           margin-top: -20px;
           background-position:center;
           object-fit:none">

        <h1 style="font-family:'Berlin Sans FB'; color:#FFFFFF; margin-top:-80px; margin-left:+15px">Detalles</h1>
    </div>

    
        <div class="container" style="margin-top:+40px; margin-left:-15px">

            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                

                
                    <!-- Wrapper for slides -->
                <div class="carousel-inner" style="height:400px !important;" align="center">
                    
                        <div class="item active">
                            <img src="@foto.Split('~')[0]" style="width:70% !important">
                        </div>
                        <div class="item">
                            <img src="@foto.Split('~')[1]" style="width:70% !important">
                        </div>
                        <div class="item">
                            <img src="@foto.Split('~')[2]" style="width:70% !important">
                        </div>
                    
                </div>
                
                    <!-- Controls -->
                    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                        <span class="sr-only">Next</span>
                    </a>
            </div>


        </div>
    
    <div class="container">

        <div class="container" style="font-family:'Modern No. 20'">
            <h4 style="font-size:200%; margin-top:+50px">@Html.DisplayFor(model => model.Nombre)</h4>
            <div class="container" style="text-align:right; margin-left:-40px; margin-top:-50px">
                <button class="btn btn-success" style="margin-right:+200px; width:200px">@Html.DisplayFor(model => model.Opcion)</button>
                <h4 style="color:red; margin-top:-28px; font-size:200%">RD$ @Html.DisplayFor(model => model.Precio)</h4>
            </div>
        </div>


    </div>


    <div class="container">
        <hr />
        <h3 style="font-family:'Modern No. 20'">
            Observaciones:
        </h3>
        <hr />
        <div class="container" style=" width:100%">

            <p>@Html.DisplayFor(model => model.Observacion)</p>

        </div>
    </div>


</div>









